{
  "name": "leonidas/leonidas-plugin",
  "type": "project",
  "description": "Starter package for creating a Leonidas based WordPress plugin",
  "homepage": "https://github.com/spider-mane/leonidas-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Chris Williams",
      "email": "spider.mane.web@gmail.com",
      "homepage": "https://github.com/spider-mane",
      "role": "Developer"
    }
  ],
  "keywords": [
    "webtheory",
    "leonidas"
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.4 || ^8.0",
    "jawira/case-converter": "^3.4",
    "league/container": "^4.2",
    "psr/container": "^1.0 || ^2.0",
    "symfony/polyfill-php80": "^1.23",
    "symfony/polyfill-php81": "^1.23",
    "webtheory/config": "@stable",
    "webtheory/facade": "@stable",
    "webtheory/html": "@stable",
    "webtheory/saveyour": "@stable"
  },
  "require-dev": {
    "composer/installers": "^1.0 || ^2.0",
    "fakerphp/faker": "^1.17",
    "friendsofphp/php-cs-fixer": "^3.3",
    "koodimonni/composer-dropin-installer": "^1.3",
    "leonidas/leonidas": "@stable",
    "mockery/mockery": "^1.4",
    "oscarotero/env": "^2.1",
    "phpbench/phpbench": "@dev",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "^1.7",
    "phpunit/phpunit": "^9.5",
    "phpunit/phpunit-selenium": "^9.0",
    "psy/psysh": "^0.10.7",
    "rector/rector": "^0.13.5",
    "spatie/phpunit-watcher": "^1.12",
    "squizlabs/php_codesniffer": "^3.0",
    "symfony/thanks": "^1.2",
    "szepeviktor/phpstan-wordpress": "^1.1",
    "vimeo/psalm": "^4.7",
    "vlucas/phpdotenv": "^5.3",
    "webtheory/exterminate": "@stable",
    "webtheory/wp-cli-util": "@stable",
    "webtheory/wpdmc": "@stable",
    "webtheory/wpunit": "@stable",
    "wp-cli/wp-cli-bundle": "@stable",
    "wpackagist-theme/twentytwentyone": "@stable"
  },
  "autoload": {
    "psr-4": {
      "PseudoVendor\\PseudoPlugin\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "analyze": "vendor/bin/phpstan analyze",
    "asset": "npm --prefix assets",
    "bench": "vendor/bin/phpbench",
    "check": "vendor/bin/phpcs",
    "collect": "vendor/bin/var-dump-server",
    "env": "cp -n .env.example .env",
    "hooks": "vendor/bin/captainhook",
    "hoplite": "vendor/bin/hoplite",
    "inspect": "vendor/bin/psalm",
    "link": "bin/symlink-plugin",
    "namespace": "composer dump-autoload -o",
    "play": "php .playground/console.php",
    "rector": "vendor/bin/rector process",
    "rector:d": "@rector --dry-run",
    "shell": "@wp shell",
    "test:run": "vendor/bin/phpunit",
    "test:acceptance": "@test:run --testsuite acceptance",
    "test:functional": "@test:run --testsuite functional",
    "test:integration": "@test:run --testsuite integration",
    "test:unit": "@test:run --testsuite unit",
    "test:wpunit": "@test:run --testsuite wpunit",
    "watch": "vendor/bin/phpunit-watcher watch",
    "wp": "vendor/bin/wp",
    "build": [
      "@asset run build",
      "@namespace",
      "@style",
      "@analyze",
      "@inspect",
      "@test"
    ],
    "style": [
      "vendor/bin/php-cs-fixer fix --verbose",
      "vendor/bin/phpcbf",
      "@check"
    ],
    "setup": [
      "composer install",
      "cp -n .env.example .env",
      "bin/build-paths",
      "bin/make-playground",
      "@wp:init"
    ],
    "test:all": [
      "@test:unit",
      "@test:wpunit",
      "@test:integration",
      "@test:functional",
      "@test:acceptance"
    ],
    "wp:init": [
      "@wp core download",
      "@link"
    ],
    "wp:refresh": [
      "@wp db export",
      "@wp db clean --yes",
      "@wp core install"
    ],
    "post-create-project-cmd": [
      "bin/composer-prefill",
      "cp -n .env.example .env",
      "bin/build-paths",
      "bin/make-playground",
      "@wp:init"
    ]
  },
  "config": {
    "optimize-autoloader": false,
    "apcu-autoloader": true,
    "sort-packages": true,
    "process-timeout": 0,
    "allow-plugins": {
      "composer/installers": true,
      "composer/package-versions-deprecated": true,
      "koodimonni/composer-dropin-installer": true,
      "phpstan/extension-installer": true,
      "symfony/thanks": true
    }
  },
  "extra": {
    "build-paths": {
      "build": {
        "php-cs-fixer": {},
        "phpstan": {},
        "phpunit": {},
        "psalm": {},
        "wordpress": {}
      },
      "logs": {}
    },
    "installer-paths": {
      "wordpress/wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "wordpress/wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "wordpress/wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ],
      "vendor/{$vendor}/{$name}/": [
        "type:wordpress-dropin"
      ]
    },
    "dropin-paths": {
      "wordpress/wp-content/": [],
      "wordpress/wp-content/mu-plugins": []
    }
  }
}
