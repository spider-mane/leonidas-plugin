{
  "name": "leonidas/leonidas-plugin",
  "version": "0.1.0",
  "type": "project",
  "description": "Starter package for creating a Leonidas based WordPress plugin",
  "homepage": "https://github.com/spider-mane/leonidas-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Chris Williams",
      "email": "spider.mane.web@gmail.com",
      "homepage": "https://github.com/spider-mane",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": "^7.3",
    "composer/installers": "^1.10",
    "guzzlehttp/psr7": "^1.6",
    "hassankhan/config": "^2.1",
    "league/container": "^3.3",
    "psr/container": "^1.1",
    "voku/stringy": "^6.4",
    "webtheory/guctilitybelt": "^0.2.0",
    "webtheory/html": "^0.2.0",
    "webtheory/saveyour": "^0.2.5"
  },
  "require-dev": {
    "coenjacobs/mozart": "0.7.1",
    "humbug/php-scoper": "^0.14.0",
    "filp/whoops": "^2.5",
    "friendsofphp/php-cs-fixer": "^2.15",
    "johnpbloch/wordpress": "^5.7",
    "monolog/monolog": "^1.24",
    "lucatume/wp-browser": "3.0.5.1",
    "fakerphp/faker": "^1.13",
    "phpbench/phpbench": "@dev",
    "phpunit/phpunit": "^8.2",
    "psy/psysh": "^0.10.7",
    "spatie/phpunit-watcher": "^1.12",
    "squizlabs/php_codesniffer": "^3.0",
    "symfony/var-dumper": "^4.3"
  },
  "autoload": {
    "psr-4": {
      "PseudoVendor\\PseudoPlugin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Fixtures\\": "tests/fixtures/",
      "Tests\\Unit\\": "tests/unit/"
    },
    "files": [
      "boot/development.php"
    ]
  },
  "scripts": {
    "wp-config": "cp -n wordpress/wp-config-sample.php wp-config.php",
    "link": "php bin/symlink-plugin",
    "test": "vendor/bin/phpunit",
    "watch": "vendor/bin/phpunit-watcher",
    "check": "vendor/bin/phpcs",
    "fix": "vendor/bin/phpcbf",
    "bench": "vendor/bin/phpbench",
    "play": "vendor/bin/psysh",
    "build": [
      "@fix",
      "@check",
      "@test"
    ],
    "post-create-project-cmd": [
      "php bin/prefill"
    ],
    "post-install-cmd": [
      "@link",
      "@wp-config"
    ]
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 0
  },
  "extra": {
    "coltrane": {
      "manage-dependencies": true
    },
    "installer-paths": {
      "wordpress/wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "wordpress/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "wordpress/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
