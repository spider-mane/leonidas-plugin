{
  "name": "leonidas/leonidas-plugin",
  "type": "project",
  "description": "Starter package for creating a Leonidas based WordPress plugin",
  "homepage": "https://github.com/spider-mane/leonidas-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Chris Williams",
      "email": "spider.mane.web@gmail.com",
      "homepage": "https://github.com/spider-mane",
      "role": "Developer"
    }
  ],
  "keywords": [
    "webtheory",
    "leonidas"
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": "^7.4",
    "composer/installers": "^1.10",
    "guzzlehttp/psr7": "^1.6",
    "hassankhan/config": "^2.1",
    "league/container": "^3.3",
    "nesbot/carbon": "^2.46",
    "psr/container": "^1.1",
    "voku/stringy": "^6.4",
    "webtheory/guctilitybelt": "@stable",
    "webtheory/html": "@stable",
    "webtheory/saveyour": "@stable"
  },
  "require-dev": {
    "fakerphp/faker": "^1.13",
    "filp/whoops": "^2.5",
    "friendsofphp/php-cs-fixer": "^2.15",
    "leonidas/leonidas": "@stable",
    "mockery/mockery": "^1.4",
    "maximebf/debugbar": "^1.17",
    "monolog/monolog": "^2.0",
    "nunomaduro/collision": "^5.10",
    "oscarotero/env": "^2.1",
    "phpbench/phpbench": "@dev",
    "phpunit/phpunit": "^9.5",
    "phpunit/phpunit-selenium": "^9.0",
    "psy/psysh": "^0.10.7",
    "spatie/phpunit-watcher": "^1.12",
    "squizlabs/php_codesniffer": "^3.0",
    "symfony/var-dumper": "^5.4",
    "vimeo/psalm": "^4.7",
    "vlucas/phpdotenv": "^5.3",
    "webtheory/exterminate": "@stable",
    "webtheory/wp-cli-util": "@stable",
    "webtheory/wp-test": "@stable",
    "wp-cli/wp-cli-bundle": "*"
  },
  "autoload": {
    "psr-4": {
      "PseudoVendor\\PseudoPlugin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "watch": "vendor/bin/phpunit-watcher",
    "check": "vendor/bin/phpcs",
    "fix": "vendor/bin/php-cs-fixer fix --verbose",
    "analyze": "vendor/bin/psalm",
    "bench": "vendor/bin/phpbench",
    "play": "vendor/bin/psysh",
    "collect": "vendor/bin/var-dump-server",
    "build": [
      "@fix",
      "@check",
      "@analyze",
      "@test"
    ],
    "link": "bin/symlink-plugin",
    "wpconfig": "cp -n wp-config-sample.php wp-config.php",
    "post-root-package-install": [
      "@wpconfig",
      "@link"
    ],
    "post-create-project-cmd": [
      "bin/composer-prefill"
    ]
  },
  "extra": {
    "coltrane": {
      "manage-dependencies": true
    },
    "installer-paths": {
      "wordpress/wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "wordpress/wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "wordpress/wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "wordpress"
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 0
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
