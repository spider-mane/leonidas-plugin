#!/usr/bin/env php
<?php

$prompt = 'prefill';
$file = "bin/$prompt";

if (PHP_OS === 'WINNT') {
  $os = 'Windows';
  $message = "Composer cannot run interactive scripts on $os. Run $prompt manually by typing 'php $file' in the command line from your project root.\n";
}

if (isset($message)) {
  echo $message;
} else {
  __composer_prefill_run_prefill();
}

function __composer_prefill_run_prefill()
{
  require __DIR__ . '/prefill';
}
