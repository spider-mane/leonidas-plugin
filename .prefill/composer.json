{
  "name": ":vendor_name/:package_name",
  "description": ":package_description",
  "type": "wordpress-plugin",
  "homepage": ":package_website",
  "license": "MIT",
  "keywords": [
    ":vendor_name",
    ":package_name"
  ],
  "authors": [
    {
      "name": ":author_name",
      "email": ":author_email",
      "homepage": ":author_website",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.3",
    "composer/installers": "^1.10",
    "guzzlehttp/psr7": "^1.6",
    "hassankhan/config": "^2.1",
    "jbzoo/utils": "^4.2",
    "league/container": "^3.3",
    "webtheory/guctilitybelt": "^0.2.0",
    "webtheory/html": "^0.2.0",
    "webtheory/saveyour": "^0.2.5"
  },
  "require-dev": {
    "coenjacobs/mozart": "0.7.1",
    "filp/whoops": "^2.5",
    "friendsofphp/php-cs-fixer": "^2.15",
    "johnpbloch/wordpress": "^5.7",
    "leonidas/leonidas": "^1.0",
    "phpbench/phpbench": "@dev",
    "phpunit/phpunit": "^8.2",
    "psy/psysh": "^0.9.9",
    "spatie/phpunit-watcher": "^1.12",
    "squizlabs/php_codesniffer": "^3.0",
    "symfony/var-dumper": "^4.3"
  },
  "autoload": {
    "psr-4": {
      ":vendor_name\\:package_name\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      ":vendor_name\\:package_name\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "watch": "phpunit-watcher watch",
    "coverage": "vendor/bin/phpunit --coverage-html coverage",
    "check": "vendor/bin/phpcs src tests",
    "fix": "vendor/bin/phpcbf src tests",
    "bench": "vendor/bin/phpbench"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    },
    "leonidas-composer": {
      "repackage": true
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "process-timeout": 0
  }
}
