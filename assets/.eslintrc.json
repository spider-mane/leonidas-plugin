{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "tsConfigRoot": "./src/ts",
    "project": ["./tsconfig.json"],
    "sourceType": "module",
    "ecmaVersion": "latest",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:jsdoc/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "plugins": [
    "@typescript-eslint",
    "jsdoc",
    "jsx-a11y",
    "react",
    "react-hooks"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "document": true,
    "window": true,
    "wp": true
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "amd": true
  },
  "settings": {
    "jsx-a11y": {
      "components": {}
    },
    "react": {
      "version": "detect"
    }
  },
  "rules": {}
}
